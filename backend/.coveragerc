# Coverage.py configuration for Terminal Manager Backend
# Phase 3.1: Testing Infrastructure Setup

[run]
# Source code to measure
source = app

# Files to omit from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */virtualenv/*
    */env/*
    */.venv/*
    */site-packages/*
    */dist-packages/*
    */migrations/*
    */alembic/*
    */__main__.py

# Branch coverage (more thorough)
branch = True

# Parallel mode for concurrent testing
parallel = False

# Data file location
data_file = .coverage

[report]
# Lines to exclude from coverage
exclude_lines =
    # Standard pragmas
    pragma: no cover
    @abstract

    # Debug-only code
    def __repr__
    def __str__

    # Error handling that shouldn't be tested
    raise AssertionError
    raise NotImplementedError
    raise ValueError

    # Main execution guards
    if __name__ == .__main__.:

    # Type checking imports
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Abstract methods
    @abstractmethod
    @abc.abstractmethod

    # Overload decorators
    @overload
    @typing.overload

    # Protocol definitions
    @runtime_checkable
    class .*\bProtocol\):

    # Defensive programming
    assert False
    raise RuntimeError

    # Pass statements in empty blocks
    pass

# Show missing lines in report
show_missing = True

# Precision for coverage percentage
precision = 2

# Skip empty files
skip_empty = True

# Fail if coverage is below threshold
fail_under = 80

# Sort report by name
sort = Name

[html]
# HTML output directory
directory = coverage_html

# Title for HTML report
title = Terminal Manager Backend Coverage

[xml]
# XML output for CI/CD integration
output = coverage.xml

[json]
# JSON output for programmatic access
output = coverage.json
pretty_print = True
show_contexts = True
