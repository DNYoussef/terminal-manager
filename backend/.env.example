# Environment Configuration Example for AI Agent Scheduler
# Copy this file to .env and fill in your actual values

# ==================== DATABASE ====================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_agent_scheduler
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=ai_agent_scheduler

# ==================== SECURITY ====================
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== EMAIL NOTIFICATIONS ====================
# SMTP Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
FROM_EMAIL=your-email@gmail.com
FROM_NAME=AI Agent Scheduler

# Other SMTP providers:
# - SendGrid: smtp.sendgrid.net (port 587)
# - Mailgun: smtp.mailgun.org (port 587)
# - AWS SES: email-smtp.us-east-1.amazonaws.com (port 587)
# - Outlook: smtp-mail.outlook.com (port 587)

# ==================== PUSH NOTIFICATIONS ====================
# VAPID Keys for Web Push (generate with: webpush.vapid_gen())
# Generate new keys: python -c "from pywebpush import webpush; print(webpush.vapid_gen())"
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
ADMIN_EMAIL=admin@example.com

# ==================== FRONTEND ====================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==================== SERVER ====================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# ==================== LOGGING ====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ==================== REDIS (Optional - for caching) ====================
REDIS_URL=redis://localhost:6379/0

# ==================== CELERY (Optional - for background tasks) ====================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ==================== MONITORING (Optional) ====================
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_PORT=9090

# ==================== FEATURE FLAGS ====================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_WEBSOCKET_NOTIFICATIONS=true
ENABLE_WEEKLY_SUMMARIES=true

# ==================== MEMORY MCP ====================
# Memory MCP Triple System HTTP API connection
# Start the Memory MCP HTTP server: memory-mcp-triple-system/start-http-server.bat
MEMORY_MCP_HOST=http://localhost
MEMORY_MCP_PORT=8080
MEMORY_MCP_TIMEOUT=30.0
MEMORY_MCP_SERVER_PATH=/path/to/memory-mcp-triple-system
