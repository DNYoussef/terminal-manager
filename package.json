{
  "name": "terminal-manager",
  "version": "1.0.0",
  "description": "Full-stack terminal manager with FastAPI backend, React frontend, and Claude Code hooks integration",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "cd backend && python -m uvicorn app.main:app --host 0.0.0.0 --port 8000",
    "start:frontend": "cd frontend && npm run dev",
    "install:all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "test": "cd frontend && npm run test:e2e",
    "health": "curl http://localhost:8000/api/v1/health && curl http://localhost:3002"
  },
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DNYoussef/terminal-manager.git"
  },
  "keywords": [
    "terminal-manager",
    "fastapi",
    "react",
    "vite",
    "claude-code",
    "hooks",
    "automation"
  ],
  "author": "Your Name",
  "license": "MIT"
}
